{
  "private": true,
  "name": "root",
  "workspaces": [
    "packages/*"
  ],
  "license": "UNLICENSED",
  "scripts": {
    "clean": "npx lerna clean -y && rm -rf node_modules",
    "build": "npx lerna run build --concurrency 2",
    "reinstall": "npx yarn clean && yarn && npx lerna exec yarn",
    "start": "npx nodemon --watch ./**/src -e '.ts' --exec 'npx lerna run build'",
    "prerelease": "npx lerna publish prerelease -y"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "4.30.0",
    "@typescript-eslint/parser": "4.30.0",
    "eslint": "7.32.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "lerna": "4.0.0",
    "nodemon": "2.0.12",
    "typescript": "4.4.3"
  }
}
