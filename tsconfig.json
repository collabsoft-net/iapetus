{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "dom",
      "es2015",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts",
    "./typings/*.d.ts",
    "./typings/**/*.d.ts",
    "./node_modules/**/*.d.ts",
  ],
  "compileOnSave": false
}
