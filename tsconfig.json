{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "dom",
      "es2021",
    ],
    "module": "es2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./typings/*.d.ts",
    "./typings/**/*.d.ts"
  ],
  "compileOnSave": false
}
